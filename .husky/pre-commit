#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hook for TypeScript safety
echo "ğŸ” Running pre-commit checks..."

# 1. Type checking
echo "ğŸ“ Checking TypeScript types..."
npm run type-check || {
  echo "âŒ TypeScript errors found. Please fix before committing."
  exit 1
}

# 2. Lint staged files
echo "ğŸ§¹ Linting staged files..."
npx lint-staged || {
  echo "âŒ Linting errors found. Please fix before committing."
  exit 1
}

# 3. Validate schemas if db files changed
if git diff --cached --name-only | grep -q "db/schema/"; then
  echo "ğŸ—„ï¸ Database schemas changed, validating types..."
  npm run types:validate || {
    echo "âŒ Schema validation failed. Run 'npm run types:generate' to fix."
    exit 1
  }
fi

echo "âœ… All pre-commit checks passed!"
